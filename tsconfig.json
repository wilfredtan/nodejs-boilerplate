{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ],
  "types": [ "node", "react" ]
}